<%= form_with(model: @task, local: true) do |form| %>

	<% if @task.errors.any? %>
		<div class="error_explanation">
			<h2><%= @task.errors.count %>件のエラーがあります</h2>
			<ul>
			<% @task.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<table>
		<tr class="task_title">
			<%= form.label :title %>
			<%= form.text_field :title %>
		</tr>

		<tr class="task_content">
			<%= form.label :content %>
			<%= form.text_field :content %>
		</tr>

		<tr class="task_deadline">
			<%= form.label :deadline %>
			<%= form.text_field :deadline %>
		</tr>

		<tr class="task_status">
			<%= form.label :status %>
			<%= form.select :status, Task.statuses.keys, include_blank: "選択してください" %>
		</tr>
	</table>
	<br>

	<%= form.submit '登録' %>
<% end %>

