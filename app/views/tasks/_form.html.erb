<%= form_with(model: @task, local: true) do |form| %>

	<% if @task.errors.any? %>
		<div class="error_explanation">
			<h2><%= @task.errors.count %>件のエラーがあります</h2>
			<ul>
			<% @task.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>

	<div class="row justify-content-center">
	<table>
		<tr class="task_title">
			<p class="mr-3"><%= form.label :title %>
			<%= form.text_field :title %></p>
		</tr>

		<tr class="task_content">
			<p class="mr-2"><%= form.label :content %>
			<%= form.text_field :content %></p>
		</tr>

		<tr class="task_deadline">
			<p class="mr-2"><%= form.label :deadline %>
			<%= form.date_field :deadline %></p>
		</tr>

		<tr class="task_status">
			<p class="mr-2"><%= form.label :status %>
			<%= form.select :status, Task.statuses.keys, include_blank: "選択してください" %></p>
		</tr>

		<tr class="task_priority">
			<p class="mr-2"><%= form.label :priority %>
			<%= form.select :priority, Task.priorities.keys, include_blank: "選択してください" %></p>
		</tr>

		<tr class="task_label">
			<p class="m-2"><%= form.collection_check_boxes(:label_ids, Label.all, :id, :name) %>
			<label style="background-color: aquamarine"></label></p>
		</tr>

	</table>
	<br>

	<p class="mr-2"><%= form.submit '登録' %></p>
	</div>
<% end %>

