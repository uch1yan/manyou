<%= flash[:success] %>
<h1>Task 一覧</h1>

<table>
	<tr>
		<th>Task title:</th>
		<th>Task content:</th>
		<th>Deadline</th>
		<th>Status</th>
	</tr>

<% @tasks.each do |task| %>
	<tr class="task_row">
		<td><%= task.title %></td>
		<td><%= task.content %></td>
		<td><%= task.deadline %></td>
		<td><%= task.status %></td>
		<td><%= link_to '詳細', task_path(task.id) %></td>
		<td><%= link_to '編集', edit_task_path(task.id) %></td>
		<td><%= link_to '削除', task_path(task.id), method: :delete, data: ['Are you sure?'] %></td>
	</tr>
	<% end %>
</table>

<p><%= link_to '新規登録画面へ', new_task_path %></p>
<p><%= link_to '終了期限でソートする', tasks_path(sort_expired: "true") %></p>







