<h1 class="text-center">Task 一覧</h1>
<hr>
<br><br>

<%= form_with(url: tasks_path, scope: :task, method: :get, local: true) do |form| %>
	<div class="row">
	<div class="col-md-2 offset-md-1">タスク名<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-task" viewBox="0 0 16 16">
  <path fill-rule="evenodd" d="M2 2.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5V3a.5.5 0 0 0-.5-.5H2zM3 3H2v1h1V3z"/>
  <path d="M5 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM5.5 7a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 4a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9z"/>
  <path fill-rule="evenodd" d="M1.5 7a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H2a.5.5 0 0 1-.5-.5V7zM2 7h1v1H2V7zm0 3.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5H2zm1 .5H2v1h1v-1z"/>
</svg><%= form.text_field :title %></div>


	<div class="col-md-2 offset-md-1">ステータス名
	<%= form.select :status, Task.statuses.keys, include_blank: "選択してください" %></div>
	<p><%= form.submit '検索'%></p>
<% end %>

<table class="table table-striped table table-hover">
	<tr class="w-100 border">
	<div class="row">
		<th class="col-2">Task title:</th>
		<th class="col-2">Task content:</th>
		<th class="col-2">Deadline</th>
		<th class="col-2">Status</th>
		<th class="col-1">Priority</th>
		<th class="col-1"></th>
		<th class="col-1"></th>
		<th class="col-1"></th>
	</tr>

<% @tasks.each do |task| %>
	<tr class="task_row">
		<td><%= task.title %></td>
		<td><%= task.content %></td>
		<td><%= task.deadline %></td>
		<td><%= task.status %></td>
		<td><%= task.priority %></td>
		<td><button type="button" class="btn btn-outline-primary"><%= link_to '詳細', task_path(task.id) %></button></td>
		<td><button type="button" class="btn btn-outline-success"><%= link_to '編集', edit_task_path(task.id) %></button></td>
		<td><button type="button" class="btn btn-outline-danger"><%= link_to '削除', task_path(task.id), method: :delete, data: ['Are you sure?'] %></button></td>
	</tr>
	<% end %>
</table>

<button type="button" class="btn btn-outline-info col-md-2 offset-md-1"><%= link_to '新規登録画面へ', new_task_path %></button>
<button type="button" class="btn btn-outline-info col-md-2 offset-md-2"><%= link_to '終了期限でソートする', tasks_path(sort_expired: "true") %></button>
<button type="button" class="btn btn-outline-info col-md-2 offset-md-2"><%= link_to '優先順位でソートする', tasks_path(sort_priority: "true") %></button>








