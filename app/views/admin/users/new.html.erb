<h1 class="text-center mt-4">新規登録</h1>
<hr>
<br><br>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %>件のエラーがあります</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:admin, @user], local: true) do |f| %>

<div class="row justify-content-center">

  <p class="mr-2"><%= f.label :name %>
  <%= f.text_field :name %></p>

  <p class="mr-2"><%= f.label :email %>
  <%= f.email_field :email %></p>

  <p class="mr-2"><%= f.label :password %>
  <%= f.password_field :password %></p>

  <p class="mr-2"><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></p>

  <p class="mr-2"><%= f.label :admin_right, "管理者権限" %>
  <%= f.check_box :admin %></p>

  <p class="mr-2"><%= f.submit "Create an account" %></p>
</div>
<% end %>

<div class="text-center m-5">
  <button type="button" class="btn btn-outline-primary"><%= link_to 'User一覧画面へ', admin_users_path %></button>
</div>